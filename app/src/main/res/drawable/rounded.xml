<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền với gradient -->
    <gradient
        android:startColor="#EF954B"
    android:centerColor="#B53D73"
    android:endColor="#9B52C6"
    android:angle="45" />

    <!-- Bo viền -->
    <stroke
        android:width="2dp"
        android:color="#E1863A" />

    <!-- Góc bo tròn -->
    <corners android:radius="16dp" />

    <!-- Đổ bóng bên trong (tùy chọn) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
